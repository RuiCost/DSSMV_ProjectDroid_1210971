<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

        <EditText
                android:id="@+id/LIB_BARRA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite para pesquisar..."
                android:padding="8dp"
                android:drawableStart="@drawable/baseline_search_24" />

        <!-- Adicione o ícone desejado usando a propriedade "android:drawableStart" -->
        <!-- Certifique-se de substituir o "@drawable/ic_lupa" pelo ícone desejado -->

    </LinearLayout>

    <ListView
            android:id="@+id/list_lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>
