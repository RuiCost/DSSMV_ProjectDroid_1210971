<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"><![CDATA[ >



    ]]>
    <ImageView
            android:id="@+id/imageBelowTitle"
            android:layout_width="349dp"
            android:layout_height="252dp"
            android:src="@drawable/capa"
            android:scaleType="centerCrop"
            android:layout_marginTop="171dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="17dp"/>
    <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intoxi"
            android:textSize="50sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/titleText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book"
            android:textSize="50sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_below="@id/titleText"
    />


    <TextView
            android:id="@+id/exploreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_below="@id/imageBelowTitle"
            android:layout_marginTop="74dp"
            android:layout_centerVertical="true"/>
    <Button
            android:id="@+id/userButton"
            android:onClick="seeUser"
            android:layout_width="match_parent"
            android:layout_height="573dp"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"/>

</RelativeLayout>
