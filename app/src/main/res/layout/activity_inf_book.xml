<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:padding="8dp">

    <ImageView
            android:id="@+id/thumbImage"
            android:layout_width="183dp"
            android:layout_height="241dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp" />

    <!-- Divisor -->

    <!-- ListView para informações do livro e comentários -->

    <TextView
            android:text="O Nome do Livro"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/thumbImage"
            android:layout_alignTop="@+id/thumbImage"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="2dp"/>
    <TextView
            android:text="Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_b"
            android:layout_toRightOf="@+id/thumbImage"
            android:layout_below="@+id/name"
            android:textSize="14sp"
            android:textColor="#808080"
            android:textStyle="italic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Tags: Aventura, Ficção, Mistério"
            android:layout_width="208dp"
            android:layout_height="36dp"
            android:id="@+id/tags"
            android:layout_toRightOf="@+id/thumbImage"
            android:layout_below="@+id/author_b"
            android:textSize="14sp"
            android:textColor="#808080"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"/>

    <TextView
            android:text="INFO"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:id="@+id/divider"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/tags"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="270dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="275dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentTop="true"/>

    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginTop="261dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="78dp"/>
    <ListView
            android:id="@+id/infoListView"
            android:layout_width="wrap_content"
            android:layout_height="204dp"
            android:layout_below="@id/divider"
            android:layout_marginTop="25dp"/>

    <!-- Botão estiloso para fazer uma revisão -->
    <!-- Botão estiloso para fazer uma revisão -->
    <Button
            android:id="@+id/reviewButton"
            android:text="See Reviews"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="159dp"
            android:backgroundTint="#FF4081"
            android:scaleType="fitEnd"
            android:layout_alignParentStart="true" android:layout_marginStart="31dp"/>
    <ImageButton
            android:id="@+id/heartButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart_shape"
            android:background="@android:color/transparent"
            android:layout_marginTop="583dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"/>


</RelativeLayout>

